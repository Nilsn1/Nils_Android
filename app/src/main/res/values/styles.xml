<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="custom_button">
        <item name="cornerRadius">12dp</item>
        <item name="background">@color/primary</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardCornerRadius">25dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">7dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>